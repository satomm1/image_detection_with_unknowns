<!-- detect_with_dist.launch -->
<launch>

  <arg name="weights_file" default="$(find image_detection_with_unknowns)/weights/osod.pt"/>
  <arg name="labels_file" default="$(find image_detection_with_unknowns)/scripts/labels.txt"/>

  <!-- Launch the object detection script -->
  <node name="image_detector_node" pkg="image_detection_with_unknowns" type="detect_with_dist.py" output="log">
    <param name="weights_file" value="$(arg weights_file)" />
    <param name="labels_file" value="$(arg labels_file)" />
  </node>

  <!-- Launch the gemini bridge -->
  <node name="gemini_bridge" pkg="image_detection_with_unknowns" type="gemini_bridge.py" output="screen" />

</launch>